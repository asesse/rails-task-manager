<h1>My tasks</h1>

<% @tasks.each do |task| %>
<ul>
  <li>
  <% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
    <%= link_to task.title, task_path(task) %> (<%= task.details %>)</li>
</ul>
<% end %>

<%= link_to 'Create a new tab', tasks_new_path  %>



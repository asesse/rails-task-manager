<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% if @task.completed %>
  <i class="far fa-check-square"></i> This task is completed
<% else %>
  <i class="far fa-square"></i> This task is not completed yet
<% end %>

<p><%= link_to 'Go back to my tasks', tasks_path %></p>
<p><%= link_to 'Edit this task', edit_task_path(@task) %></p>
<p><%= link_to 'Delete task', task_path(@task),
    method: :delete,
    data: { confirm: "Are you sure? Really Sure?" } %></p>
